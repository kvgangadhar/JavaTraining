<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">  <display-name>Archetype Created Web Application</display-name>
  <filter>
  	<filter-name>SecurityFilter</filter-name>
  	<filter-class>trng.imcs.filter.SecurityFilter</filter-class>
  </filter>
  <filter-mapping>
  	<filter-name>SecurityFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<servlet-class>trng.imcs.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>HomeServlet</servlet-name>
  	<servlet-class>trng.imcs.servlet.HomeServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>EmployeeServlet</servlet-name>
  	<servlet-class>trng.imcs.servlet.EmployeeServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>LogoutServlet</servlet-name>
  	<servlet-class>trng.imcs.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ProductServlet</servlet-name>
  	<servlet-class>trng.imcs.servlet.ProductServlet</servlet-class>
  </servlet>

  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>HomeServlet</servlet-name>
  	<url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>EmployeeServlet</servlet-name>
  	<url-pattern>/employee</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LogoutServlet</servlet-name>
  	<url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ProductServlet</servlet-name>
  	<url-pattern>/product</url-pattern>
  </servlet-mapping>
  
  <jsp-config>
    <taglib>
      <taglib-uri>coretag</taglib-uri>
      <taglib-location>tlds/c.tld</taglib-location>
    </taglib>
    <taglib>
      <taglib-uri>formattag</taglib-uri>
      <taglib-location>tlds/fmt.tld</taglib-location>
    </taglib>
  </jsp-config>
</web-app>
